            <Grid Grid.Row="2" Grid.Column="0" HorizontalAlignment ="Left">
                <StackPanel Width="200" HorizontalAlignment ="Left">
                    <RadioButton Content="Home"
                                Height="50"
                                Foreground="White"
                                FontSize="14"
                                Style="{StaticResource MenuButton}"
                                IsChecked="True"
                                Command="{Binding HomeViewCommand}">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                Background="{TemplateBinding Background}">
                                    <Image Width="30" Height="30" Margin="10" Source="/Image/home-solid.png"/>
                                    <TextBlock Text="{TemplateBinding Property=Content}"
                                    VerticalAlignment="Center"
                                    Margin= "30,0,0,0"/>
                                </StackPanel>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                    <RadioButton Content="WebCam"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource MenuButton}"
                                 Command="{Binding DiscoveryViewCommand}">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                Background="{TemplateBinding Background}">
                                    <Image Width="30" Height="30" Margin="10" Source="/Image/camera-solid.png"/>
                                    <TextBlock Text="{TemplateBinding Property=Content}"
                                    VerticalAlignment="Center"
                                    Margin= "30,0,0,0"/>
                                </StackPanel>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                    <RadioButton Content="Sudoku"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource MenuButton}"
