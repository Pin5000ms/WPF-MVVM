            <Grid x:Name="navigation_panel"
                  Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Height="90" HorizontalAlignment="Left" Margin="19,0,0,0">
                        <!--直接ToggleButton.Triggers通過觸發動畫，將名為nav_pnl的Grid的Width改變-->
                        <ToggleButton Width="30" Height="30" IsChecked="true">

                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <ControlTemplate.Triggers>

                                                    <Trigger Property="IsMouseOver" Value="true">

                                                        <Setter Property="Background" TargetName="border">
                                                            <Setter.Value>
                                                                <ImageBrush ImageSource="/Image/bars-selected.png"/>
                                                            </Setter.Value>
                                                        </Setter>

                                                        <Setter Property="BorderBrush" TargetName="border">
                                                            <Setter.Value>
                                                                <ImageBrush ImageSource="/Image/bars-selected.png"/>
                                                            </Setter.Value>
                                                        </Setter>

                                                    </Trigger>

                                                    <Trigger Property="IsChecked" Value="true">

                                                        <Setter Property="Background"
                                                            TargetName="border"
                                                            Value="{StaticResource tb_selected}"/>

                                                        <Setter Property="BorderBrush"
                                                            TargetName="border"
                                                            Value="{StaticResource tb_selected}"/>

                                                    </Trigger>

                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                            
                            <ToggleButton.Background>
                                <ImageBrush ImageSource="Image/bars-default.png"/>
                            </ToggleButton.Background>

                            <ToggleButton.Triggers>

                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="HideStackPanel">
                                            <DoubleAnimation     
                                                Storyboard.TargetName="navigation_panel"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="200" To="65"
                                                Duration="0:0:0.2">
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="ShowStackPanel">
                                            <DoubleAnimation
                                                Storyboard.TargetName="navigation_panel"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="65" To="200"
                                                Duration="0:0:0.3">
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                            </ToggleButton.Triggers>
                        </ToggleButton>
                        <TextBlock Text="TingYu"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Foreground="White"
                            FontSize="22"
                            Margin="20,0,0,0"/>
                        
                    </StackPanel>
                    <ListView  Background="Transparent"
                               BorderBrush="Transparent"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                               SelectedIndex="{Binding SelectIdx}">
                        
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal"
                                        Width="200">
                                <Image Source="Image/home-solid.png"
                                       Width="30"
                                       Height="30"
                                       Margin="12,10,0,10"/>

                                <TextBlock Text="Home"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"
                                           Width="130"/>
                            </StackPanel>
                        </ListViewItem>

                        <ListViewItem>
                            <StackPanel Orientation="Horizontal"
                                        Width="200">
                                <Image Source="Image/camera-solid.png"
                                       Width="30"
                                       Height="30"
                                       Margin="12,10,0,10"/>

                                <TextBlock Text="WebCam"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"
                                           Width="130"/>
                            </StackPanel>
                        </ListViewItem>

                        <ListViewItem>
                            <StackPanel Orientation="Horizontal"
                                        Width="200">
                                <Image Source="Image/gamepad-solid.png"
                                       Width="30"
                                       Height="30"
                                       Margin="12,10,0,10"/>

                                <TextBlock Text="Sudoku"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"
                                           Width="130"/>
                            </StackPanel>
                        </ListViewItem>


                        <ListView.ItemContainerStyle>
                            <!--客製該ListView中每個ListItem的呈現方式-->
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">

                                            <StackPanel x:Name="sp"
                                                        Orientation="Horizontal">
                                                <Rectangle x:Name="rec" Width="10" Margin="5,0,0,0"/>
                                                <ContentPresenter  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </StackPanel>

                                            <!--<Border x:Name="sp"
                                                    Height="50"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter 
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </Border>-->

                                            <ControlTemplate.Triggers>

                                                <!--滑鼠在上方時改變底色-->
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>

                                                    <Setter Property="Background"
                                                            TargetName="sp"
                                                            Value="#404D5B"/>
                                                </MultiTrigger>

                                                <!--選取時改變底色-->
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background"
                                                            TargetName="sp"
                                                            Value="#22202f"/>
                                                    <Setter Property="Fill"
                                                            TargetName="rec"
                                                            Value="White"/>
                                                </Trigger>

                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </StackPanel>
            </Grid>

            <TextBox Width="250" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" Grid.Row ="1" Grid.Column="1" 
                     Style="{StaticResource ModernTextBox}"/>

            <Grid Grid.Row="2" Grid.Column ="1">
                <ContentControl Margin="10" Content="{Binding CurrentView}"/>
            </Grid>
            
        </Grid>
    </Border>
</Window>
